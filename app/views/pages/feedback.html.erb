<%= content_for :page_title, t(".page_title") %>

<div class="bg-container shadow-border-xs rounded-xl p-4">
  <h2 class="text-lg font-medium text-primary mb-1"><%= t(".title") %></h2>
  <p class="text-sm text-secondary mb-4"><%= t(".subtitle") %></p>
  <div class="flex flex-col md:flex-row gap-4">
    <%= link_to "mailto:hi@tonyx.dev", class: "w-full md:w-1/3 flex flex-col items-center p-4 border border-alpha-black-25 rounded-xl hover:bg-container-hover" do %>
      <%= icon "mail", size: "2xl", class: "mb-2" %>
      <span class="text-sm font-medium text-primary text-center"><%= t(".contact_email") %></span>
    <% end %>

    <%= link_to "https://twitter.com/tonyxdev", target: "_blank", rel: "noopener noreferrer", class: "w-full md:w-1/3 flex flex-col items-center p-4 border border-alpha-black-25 rounded-xl hover:bg-container-hover" do %>
      <%= icon "twitter", size: "2xl", class: "mb-2" %>
      <span class="text-sm font-medium text-primary text-center"><%= t(".contact_twitter") %></span>
    <% end %>

    <%= link_to "https://help.tonyx.dev", target: "_blank", rel: "noopener noreferrer", class: "w-full md:w-1/3 flex flex-col items-center p-4 border border-alpha-black-25 rounded-xl hover:bg-container-hover" do %>
      <%= icon "book-open", size: "2xl", class: "mb-2" %>
      <span class="text-sm font-medium text-primary text-center"><%= t(".visit_help_center") %></span>
    <% end %>
  </div>
</div>
